{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "experimentalDecorators": false,
    "outDir": "dist",
    "baseUrl": "",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/*",
    "src/models/request.models.ts",
    "src/routes/routes.ts",
    "src/services/routes.ts"
  ],
  "exclude": ["**/*.spec.ts", "node_modules/*"]
}
